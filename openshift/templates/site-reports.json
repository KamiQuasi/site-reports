{
	"kind": "Template",
	"apiVersion": "v1",
	"metadata": {
		"name": "rhd",
		"annotations": {
			"description": "A suite of reports about the performance and health of a website",
			"tags": "golang",
			"iconClass": "icon-golang"
		}
	},
	"labels": {
		"template": "site-reports"
	},
	"objects": [{
		"kind": "Service",
		"apiVersion": "v1",
		"metadata": {
			"name": "report-svc",
			"annotations": {
				"description": "Exposes and load balances the application pods"
			}
		},
		"spec": {
			"ports": [{
				"name": "web",
				"port": 8080,
				"targetPort": 80
			}],
			"selector": {
				"name": "report-www"
			}
		}
	}, {
		"kind": "Route",
		"apiVersion": "v1",
		"metadata": {
			"name": "reports"
		},
		"spec": {
			"host": "${APPLICATION_DOMAIN}",
			"to": {
				"kind": "Service",
				"name": "report-svc"
			}
		}
	}, {
		"kind": "ImageStream",
		"apiVersion": "v1",
		"metadata": {
			"name": "reports-img",
			"annotations": {
				"description": "Keeps track of changes in the application image"
			}
		}
	}, {
		"kind": "BuildConfig",
		"apiVersion": "v1",
		"metadata": {
			"name": "reports-build",
			"annotations": {
				"description": "Defines how to build the application"
			}
		},
		"spec": {
			"source": {
				"type": "Git",
				"git": {
					"uri": "${SOURCE_REPOSITORY_URL}",
					"ref": "${SOURCE_REPOSITORY_REF}"
				},
				"contextDir": "${CONTEXT_DIR}"
			},
			"strategy": {
				"type": "Docker"
			},
			"output": {
				"to": {
					"kind": "ImageStreamTag",
					"name": "reports-img:latest"
				}
			},
			"triggers": [{
				"type": "ConfigChange"
			}, {
				"type": "GitHub",
				"github": {
					"secret": "${GITHUB_WEBHOOK_SECRET}"
				}
			}],
			"postCommit": {
				"script": "go test -v ./..."
			}
		}
	}, {
		"kind": "PersistentVolumeClaim",
		"apiVersion": "v1",
		"metadata": {
			"name": "reports-hdd"
		},
		"spec": {
			"resources": {
				"requests": {
					"storage": "1Gi"
				}
			},
			"accessModes": [
				"ReadWriteOnce"
			]
		}
	}, {
		"kind": "DeploymentConfig",
		"apiVersion": "v1",
		"metadata": {
			"name": "reports-deploy",
			"annotations": {
				"description": "Defines how to deploy the application server"
			}
		},
		"spec": {
			"strategy": {
				"type": "Rolling"
			},
			"replicas": 1,
			"selector": {
				"name": "rhd-reports"
			},
			"triggers": [{
				"type": "ImageChange",
				"imageChangeParams": {
					"automatic": true,
					"containerNames": [
						"reports-www"
					],
					"from": {
						"kind": "ImageStreamTag",
						"name": "reports-img:latest"
					}
				}
			}, {
				"type": "ConfigChange"
			}],
			"template": {
				"metadata": {
					"name": "reports-www",
					"labels": {
						"name": "reports-www"
					}
				},
				"spec": {
					"containers": [{
						"name": "reports-www",
						"image": "reports-img",
						"volumeMounts": [{
							"mountPath": "/data",
							"name": "reports-hdd"
						}],
						"ports": [{
							"containerPort": 8080
						}]
					}],
					"volumes": [{
						"name": "reports-hdd",
						"persistentVolumeClaim": {
							"claimName": "reports-hdd"
						}
					}]
				}
			}
		}
	}],
	"parameters": [{
		"name": "SOURCE_REPOSITORY_URL",
		"description": "The URL of the repository with your application source code",
		"value": "https://github.com/KamiQuasi/site-reports.git"
	}, {
		"name": "SOURCE_REPOSITORY_REF",
		"description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch"
	}, {
		"name": "CONTEXT_DIR",
		"description": "Set this to the relative path to your project if it is not in the root of your repository"
	}, {
		"name": "APPLICATION_DOMAIN",
		"description": "The exposed hostname that will route to the rhd-report service",
		"value": "reports"
	}, {
		"name": "GITHUB_WEBHOOK_SECRET",
		"description": "A secret string used to configure the GitHub webhook",
		"generate": "expression",
		"from": "[a-zA-Z0-9]{40}"
	}]
}